<UserControl x:Class="PointOfSale.TransactionScreens.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.TransactionScreens"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="575">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <TextBlock FontFamily="Rockwell" Background="#FFD17D17" VerticalAlignment="Stretch" FontSize="35" FontWeight="Heavy">Card</TextBlock>
        <TextBlock x:Name="CardDisplay" Width="575" FontSize="25" Grid.Row="1" Foreground="#FF584444" HorizontalAlignment="Stretch" Padding="100,100,100,100" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
