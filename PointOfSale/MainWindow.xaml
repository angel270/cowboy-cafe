<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="Cowboy Cafe Point of Sale" Width="800" SizeToContent="Height" ResizeMode="NoResize" ShowActivated="False" WindowStyle="ThreeDBorderWindow" ShowInTaskbar="True">
    <Grid>
        <local:OrderControl RenderTransformOrigin="0.5,0.5" Cursor="Cross" VerticalAlignment="Top" AutomationProperties.IsRowHeader="True">
            <local:OrderControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.1"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.391"/>
                </TransformGroup>
            </local:OrderControl.RenderTransform>
        </local:OrderControl>
    </Grid>
</Window>
